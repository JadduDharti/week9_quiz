<%- include('../partials/header-dark.ejs') %>

<main class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card mt-5">
                <div class="card-body">
                    <% if (submission.quiz) { %>
                        <h1>Thank you!</h1>
                        <p><strong>You successfully submitted quiz:</strong> <%= submission.quiz.title %></p>
                        <p><strong>You scored:</strong> <%- submission.score %>%</p>
                      <% } else { %>
                        <h1>Error</h1>
                        <p>An error occurred while retrieving your quiz results. Please try again later.</p>
                      <% } %>
                      <a class="btn btn-primary" href="/">Go Home</a>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>